{% block page_body %}
<div class="row row-deck row-cards">
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Расходы</div>
                </div>
                <div class="h1 mb-3">12 000 ₽</div>
            </div>
            <div id="test-chart-1" class="chart-sm" style="min-height: 40px;">
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="subheader">Средний расход за день</div>
